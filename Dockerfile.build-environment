FROM ffsv/dev

WORKDIR /usr/src/app

# get the main source
COPY . .

# Runtime requirements in the src tree, now that it's there
#COPY requirements.txt ./
RUN pip install -r requirements.txt -t src/lib

# Cause everything to be compiled
RUN pip install -t /tmp/ffsv .

# zip up the result
RUN cd /tmp/ffsv && zip -9r ../ffsv.zip .

# now run some tests to ensure we got a good build
COPY ./tests/data/32bit.exe .
RUN pip install -e . && python -m ff_sig_verify 32bit.exe

ENTRYPOINT ["bash"]
